root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab

[go.{mod,sum}]
indent_style = unset
indent_size = unset

[*.nix]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yaml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
